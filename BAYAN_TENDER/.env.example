# =============================================================================
# Bayan Tender Management System - Environment Variables
# =============================================================================
# Copy this file to .env and update values for your environment
# NEVER commit .env to version control!
# =============================================================================

# -----------------------------------------------------------------------------
# General Settings
# -----------------------------------------------------------------------------
COMPOSE_PROJECT_NAME=bayan
ENVIRONMENT=Development

# -----------------------------------------------------------------------------
# API Configuration
# -----------------------------------------------------------------------------
API_URL=http://localhost:5000
ASPNETCORE_ENVIRONMENT=Development

# -----------------------------------------------------------------------------
# Database - PostgreSQL
# -----------------------------------------------------------------------------
POSTGRES_HOST=db
POSTGRES_PORT=5432
POSTGRES_DB=bayan
POSTGRES_USER=bayan_user
POSTGRES_PASSWORD=BayanSecure123!

# Full connection string (used by API)
DATABASE_CONNECTION_STRING=Host=db;Port=5432;Database=bayan;Username=bayan_user;Password=BayanSecure123!

# -----------------------------------------------------------------------------
# Cache - Redis
# -----------------------------------------------------------------------------
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_CONNECTION_STRING=redis:6379,abortConnect=false

# -----------------------------------------------------------------------------
# Object Storage - MinIO
# -----------------------------------------------------------------------------
MINIO_ENDPOINT=minio:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET_NAME=bayan-documents
MINIO_USE_SSL=false

# External MinIO access (for development)
MINIO_EXTERNAL_ENDPOINT=localhost:9000

# -----------------------------------------------------------------------------
# JWT Authentication
# -----------------------------------------------------------------------------
# IMPORTANT: Change this in production! Use a strong, random 256-bit key
JWT_SECRET=YourSuperSecretKeyForBayanTenderManagementSystem2024!
JWT_ISSUER=Bayan.API
JWT_AUDIENCE=Bayan.Client
JWT_EXPIRATION_MINUTES=60
JWT_REFRESH_TOKEN_EXPIRATION_DAYS=7

# -----------------------------------------------------------------------------
# Email / SMTP
# -----------------------------------------------------------------------------
# Development (MailHog)
SMTP_HOST=mailhog
SMTP_PORT=1025
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_FROM_EMAIL=noreply@bayan.ae
SMTP_FROM_NAME=Bayan Tender System
SMTP_ENABLE_SSL=false

# Production (Resend or other SMTP provider)
# SMTP_HOST=smtp.resend.com
# SMTP_PORT=587
# SMTP_USERNAME=resend
# SMTP_PASSWORD=re_your_api_key
# SMTP_FROM_EMAIL=noreply@yourdomain.com
# SMTP_FROM_NAME=Bayan Tender System
# SMTP_ENABLE_SSL=true

# -----------------------------------------------------------------------------
# Logging
# -----------------------------------------------------------------------------
LOG_LEVEL=Information
SEQ_URL=http://localhost:5341

# -----------------------------------------------------------------------------
# Background Jobs - Hangfire
# -----------------------------------------------------------------------------
HANGFIRE_DASHBOARD_USERNAME=admin
HANGFIRE_DASHBOARD_PASSWORD=HangfireAdmin123!

# -----------------------------------------------------------------------------
# Rate Limiting
# -----------------------------------------------------------------------------
RATE_LIMIT_REQUESTS_PER_MINUTE=100
RATE_LIMIT_REQUESTS_PER_HOUR=1000

# -----------------------------------------------------------------------------
# File Upload Limits
# -----------------------------------------------------------------------------
MAX_FILE_SIZE_MB=100
ALLOWED_FILE_EXTENSIONS=.pdf,.doc,.docx,.xls,.xlsx,.png,.jpg,.jpeg,.zip

# -----------------------------------------------------------------------------
# Feature Flags
# -----------------------------------------------------------------------------
ENABLE_SWAGGER=true
ENABLE_HANGFIRE_DASHBOARD=true
ENABLE_HEALTH_CHECKS=true

# -----------------------------------------------------------------------------
# CORS
# -----------------------------------------------------------------------------
CORS_ALLOWED_ORIGINS=http://localhost:4200,http://localhost:5000

# -----------------------------------------------------------------------------
# Encryption Keys (for sensitive data at rest)
# -----------------------------------------------------------------------------
# IMPORTANT: Change these in production! Use strong, random keys
DATA_ENCRYPTION_KEY=YourDataEncryptionKey32Chars!!

# -----------------------------------------------------------------------------
# External Services (Production)
# -----------------------------------------------------------------------------
# Google Cloud Storage (alternative to MinIO)
# GCS_PROJECT_ID=your-project-id
# GCS_BUCKET_NAME=your-bucket-name
# GCS_CREDENTIALS_PATH=/app/secrets/gcs-credentials.json

# Azure Blob Storage (alternative to MinIO)
# AZURE_STORAGE_CONNECTION_STRING=your-connection-string
# AZURE_STORAGE_CONTAINER_NAME=bayan-documents
