{
  "ConnectionStrings": {
    "DefaultConnection": "",
    "Redis": ""
  },
  "MinIO": {
    "Endpoint": "",
    "AccessKey": "",
    "SecretKey": "",
    "BucketName": "bayan-documents",
    "UseSSL": true,
    "Region": "us-east-1"
  },
  "Jwt": {
    "Secret": "",
    "Issuer": "Bayan.API",
    "Audience": "Bayan.Client",
    "ExpirationInMinutes": 30,
    "RefreshTokenExpirationInDays": 7,
    "ClockSkewInMinutes": 2
  },
  "Smtp": {
    "Host": "",
    "Port": 587,
    "Username": "",
    "Password": "",
    "FromEmail": "noreply@bayan.ae",
    "FromName": "Bayan Tender System",
    "EnableSsl": true,
    "UseDefaultCredentials": false
  },
  "Serilog": {
    "Using": [
      "Serilog.Sinks.Console",
      "Serilog.Sinks.File",
      "Serilog.Sinks.Seq"
    ],
    "MinimumLevel": {
      "Default": "Warning",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.AspNetCore": "Warning",
        "Microsoft.EntityFrameworkCore": "Error",
        "Microsoft.EntityFrameworkCore.Database.Command": "Error",
        "System": "Warning",
        "Hangfire": "Warning",
        "Bayan": "Information"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "formatter": "Serilog.Formatting.Compact.CompactJsonFormatter, Serilog.Formatting.Compact"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "/var/log/bayan/bayan-.log",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 90,
          "formatter": "Serilog.Formatting.Compact.CompactJsonFormatter, Serilog.Formatting.Compact",
          "fileSizeLimitBytes": 104857600,
          "rollOnFileSizeLimit": true
        }
      }
    ],
    "Enrich": [
      "FromLogContext",
      "WithMachineName",
      "WithThreadId",
      "WithExceptionDetails",
      "WithCorrelationId"
    ],
    "Properties": {
      "Application": "Bayan.API",
      "Environment": "Production"
    }
  },
  "Hangfire": {
    "Dashboard": {
      "Enabled": true,
      "Username": "",
      "Password": ""
    },
    "WorkerCount": 10,
    "Queues": [
      "critical",
      "default",
      "low"
    ]
  },
  "Cache": {
    "DefaultExpirationMinutes": 60,
    "SlidingExpirationMinutes": 30,
    "AbsoluteExpirationHours": 24
  },
  "FileUpload": {
    "MaxFileSizeMB": 100,
    "AllowedExtensions": [
      ".pdf",
      ".doc",
      ".docx",
      ".xls",
      ".xlsx",
      ".png",
      ".jpg",
      ".jpeg",
      ".zip"
    ],
    "VirusScanEnabled": true
  },
  "RateLimiting": {
    "EnableRateLimiting": true,
    "PermitLimit": 60,
    "Window": 60,
    "QueueProcessingOrder": "OldestFirst",
    "QueueLimit": 5
  },
  "Cors": {
    "AllowedOrigins": [],
    "AllowedMethods": [
      "GET",
      "POST",
      "PUT",
      "DELETE",
      "PATCH"
    ],
    "AllowedHeaders": [
      "Authorization",
      "Content-Type",
      "Accept",
      "Origin",
      "X-Requested-With",
      "X-Correlation-Id"
    ],
    "ExposedHeaders": [
      "X-Pagination",
      "X-Correlation-Id"
    ],
    "AllowCredentials": true
  },
  "HealthChecks": {
    "Enabled": true,
    "Path": "/health",
    "DetailedPath": "/health/detailed"
  },
  "Swagger": {
    "Enabled": false,
    "Title": "Bayan Tender Management API",
    "Version": "v1",
    "Description": "API documentation for the Bayan Tender Management System"
  },
  "ExcelProcessing": {
    "MaxRowsPerSheet": 50000,
    "MaxColumnsPerSheet": 100,
    "TimeoutSeconds": 300
  },
  "PdfGeneration": {
    "DefaultFontFamily": "Arial",
    "DefaultFontSize": 10,
    "CompanyLogoPath": "assets/logo.png",
    "DebugMode": false
  },
  "AuditLog": {
    "Enabled": true,
    "LogRequestBody": false,
    "LogResponseBody": false,
    "ExcludedPaths": [
      "/health",
      "/swagger",
      "/hangfire"
    ]
  },
  "Security": {
    "EnableHttpsRedirection": true,
    "EnableHsts": true,
    "HstsMaxAgeDays": 365,
    "EnableXssProtection": true,
    "EnableContentTypeOptions": true,
    "EnableFrameOptions": true
  },
  "AllowedHosts": ""
}
