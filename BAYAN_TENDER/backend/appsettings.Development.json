{
  "ConnectionStrings": {
    "DefaultConnection": "Host=localhost;Port=5432;Database=bayan;Username=bayan_user;Password=BayanSecure123!;Include Error Detail=true",
    "Redis": "localhost:6379,abortConnect=false,connectTimeout=10000,syncTimeout=10000"
  },
  "MinIO": {
    "Endpoint": "localhost:9000",
    "AccessKey": "minioadmin",
    "SecretKey": "minioadmin",
    "BucketName": "bayan-documents",
    "UseSSL": false,
    "Region": "us-east-1"
  },
  "Jwt": {
    "Secret": "YourSuperSecretKeyForBayanTenderManagementSystem2024DevEnvironment!",
    "Issuer": "Bayan.API",
    "Audience": "Bayan.Client",
    "ExpirationInMinutes": 480,
    "RefreshTokenExpirationInDays": 30,
    "ClockSkewInMinutes": 5
  },
  "Smtp": {
    "Host": "localhost",
    "Port": 1025,
    "Username": "",
    "Password": "",
    "FromEmail": "noreply@bayan.local",
    "FromName": "Bayan Tender System (Dev)",
    "EnableSsl": false,
    "UseDefaultCredentials": false
  },
  "Serilog": {
    "Using": [
      "Serilog.Sinks.Console",
      "Serilog.Sinks.File",
      "Serilog.Sinks.Debug"
    ],
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Information",
        "Microsoft.AspNetCore": "Warning",
        "Microsoft.EntityFrameworkCore": "Information",
        "Microsoft.EntityFrameworkCore.Database.Command": "Information",
        "System": "Information",
        "Hangfire": "Debug"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "theme": "Serilog.Sinks.SystemConsole.Themes.AnsiConsoleTheme::Code, Serilog.Sinks.Console",
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {SourceContext}{NewLine}{Message:lj}{NewLine}{Exception}"
        }
      },
      {
        "Name": "Debug",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {Message:lj}{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/bayan-dev-.log",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 7,
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level:u3}] {SourceContext}{NewLine}{Message:lj}{NewLine}{Exception}",
          "fileSizeLimitBytes": 10485760,
          "rollOnFileSizeLimit": true
        }
      }
    ],
    "Enrich": [
      "FromLogContext",
      "WithMachineName",
      "WithThreadId",
      "WithExceptionDetails"
    ],
    "Properties": {
      "Application": "Bayan.API",
      "Environment": "Development"
    }
  },
  "Hangfire": {
    "Dashboard": {
      "Enabled": true,
      "Username": "admin",
      "Password": "admin"
    },
    "WorkerCount": 2,
    "Queues": [
      "critical",
      "default",
      "low"
    ]
  },
  "Cache": {
    "DefaultExpirationMinutes": 5,
    "SlidingExpirationMinutes": 2,
    "AbsoluteExpirationHours": 1
  },
  "FileUpload": {
    "MaxFileSizeMB": 100,
    "AllowedExtensions": [
      ".pdf",
      ".doc",
      ".docx",
      ".xls",
      ".xlsx",
      ".png",
      ".jpg",
      ".jpeg",
      ".zip",
      ".txt",
      ".csv"
    ],
    "VirusScanEnabled": false
  },
  "RateLimiting": {
    "EnableRateLimiting": false,
    "PermitLimit": 1000,
    "Window": 60,
    "QueueProcessingOrder": "OldestFirst",
    "QueueLimit": 100
  },
  "Cors": {
    "AllowedOrigins": [
      "http://localhost:4200",
      "http://localhost:5000",
      "http://127.0.0.1:4200",
      "http://127.0.0.1:5000"
    ],
    "AllowedMethods": [
      "GET",
      "POST",
      "PUT",
      "DELETE",
      "PATCH",
      "OPTIONS"
    ],
    "AllowedHeaders": [
      "*"
    ],
    "ExposedHeaders": [
      "X-Pagination",
      "X-Correlation-Id",
      "Content-Disposition"
    ],
    "AllowCredentials": true
  },
  "HealthChecks": {
    "Enabled": true,
    "Path": "/health",
    "DetailedPath": "/health/detailed"
  },
  "Swagger": {
    "Enabled": true,
    "Title": "Bayan Tender Management API (Development)",
    "Version": "v1-dev",
    "Description": "Development API documentation for the Bayan Tender Management System"
  },
  "ExcelProcessing": {
    "MaxRowsPerSheet": 100000,
    "MaxColumnsPerSheet": 200,
    "TimeoutSeconds": 600
  },
  "PdfGeneration": {
    "DefaultFontFamily": "Arial",
    "DefaultFontSize": 10,
    "CompanyLogoPath": "assets/logo.png",
    "DebugMode": true
  },
  "AuditLog": {
    "Enabled": true,
    "LogRequestBody": true,
    "LogResponseBody": true,
    "ExcludedPaths": [
      "/health",
      "/swagger"
    ]
  },
  "Development": {
    "EnableDetailedErrors": true,
    "EnableSensitiveDataLogging": true,
    "SeedTestData": true,
    "MockExternalServices": false
  },
  "AllowedHosts": "*"
}
